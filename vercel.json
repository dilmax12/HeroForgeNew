{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/daily/leaderboard", "destination": "/api/daily?action=leaderboard" },
    { "source": "/api/daily/submit", "destination": "/api/daily?action=submit" },
    { "source": "/api/daily-leaderboard", "destination": "/api/daily?action=leaderboard" },
    { "source": "/api/daily-submit", "destination": "/api/daily?action=submit" },
    { "source": "/api/tavern-approve", "destination": "/api/tavern?action=approve" },
    { "source": "/api/tavern-events", "destination": "/api/tavern?action=events" },
    { "source": "/api/tavern-report", "destination": "/api/tavern?action=report" },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
